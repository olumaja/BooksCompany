@model Books.Model.Models.CoverType
@{
    ViewData["Title"] = "Edit Cover Type";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CoverTypeId" />
        <div class="col-12 border-bottom">
            <h2 class="text-primary">Edit Cover Type</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4 pt-4">
                    <partial name="_EditAndBackToListButton" model="Model.CoverTypeId" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}